<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IOT Challenge</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>

<body>
    <div id="header">
        <h1>IOT CHALLENGE</h1>
    </div>
    <!-- Hiển thị các giá trị lớn nhất, nhỏ nhất, giá trị trung bình -->
    <div class="div-table">
        <table id="highlight-para">
            <tbody>
                <tr>
                    <th>Temperature (&degC)</th>
                    <td>Avg</td>
                    <td>Min</td>
                    <td>Max</td>
                </tr>
                <tr>
                    <th>Humidity (%)</th>
                    <td>Avg</td>
                    <td>Min</td>
                    <td>Max</td>
                </tr>
                <tr>
                    <th>Gas (ppm)</th>
                    <td>Avg</td>
                    <td>Min</td>
                    <td>Max</td>
                </tr>
                <tr>
                    <th>Light status</th>
                    <td colspan="3">
                        <input id="toggleButton" type="button" value="ON">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- Hiển thị các thông số của cảm biết -->
    <table id="infor-para">
        <tbody>
            <tr>
                <th>Timestamp</th>
                <th>Temperature</th>
                <th>Humidity</th>
                <th>Gas</th>
                <th>Light</th>
            </tr>
            <!-- Trích xuất dữ liệu từ database -->
            <%result.forEach(element=> {%>
                <tr>
                    <td>
                        <%- element.date.toLocaleString('en-US', { hour12: false })%>
                    </td>
                    <td>
                        <%- element.temperature%>
                    </td>
                    <td>
                        <%- element.humidity%>
                    </td>
                    <td>
                        <%- element.gas%>
                    </td>
                    <td>
                        <%- element.ledStatus%>
                    </td>
                </tr>
                <%})%>
        </tbody>
    </table>
</body>

</html>